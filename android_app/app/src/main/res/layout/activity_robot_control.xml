<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 状态显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/status_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接状态: 正常"
            android:textSize="14sp"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/tv_pose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="位置: (0.00, 0.00)\n角度: 0.0°"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="速度: 0.3 m/s"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- 速度控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="速度控制"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekbar_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="60" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="慢速模式"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switch_slow_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 方向控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方向控制"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 前进按钮 -->
        <Button
            android:id="@+id/btn_forward"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="前进"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- 左右停止后退 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="左转"
                android:textSize="16sp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="停止"
                android:textSize="16sp"
                android:backgroundTint="#F44336"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="右转"
                android:textSize="16sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 后退按钮 -->
        <Button
            android:id="@+id/btn_backward"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="后退"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 系统控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统控制"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 紧急停止和关机 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_emergency_stop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="紧急停止"
                android:textSize="14sp"
                android:backgroundTint="#FF5722"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_shutdown"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="关机"
                android:textSize="14sp"
                android:backgroundTint="#9C27B0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 导航控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start_nav"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="开始导航"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btn_stop_nav"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="停止导航"
                android:textSize="14sp"
                android:backgroundTint="#FF9800"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> 